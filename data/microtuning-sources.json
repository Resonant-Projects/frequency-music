  "mathematics": {
    "formulas": [
      {
        "name": "Cents from Ratio",
        "formula": "cents = 1200 × log₂(ratio)",
        "alternative": "cents = log₁₀(ratio) × 3986.3137",
        "description": "Convert frequency ratio to cents"
      },
      {
        "name": "Ratio from Cents",
        "formula": "ratio = 2^(cents/1200)",
        "description": "Convert cents to frequency ratio"
      },
      {
        "name": "Frequency from MIDI Note",
        "formula": "f = 440 × 2^((n-69)/12)",
        "description": "Standard 12-EDO frequency calculation"
      },
      {
        "name": "EDO Step Size",
        "formula": "step_cents = 1200/n",
        "description": "Size of one step in n-EDO in cents"
      },
      {
        "name": "EDO Frequency Ratio",
        "formula": "ratio = 2^(step/n)",
        "description": "Ratio of step k in n-EDO"
      }
    ],
    "concepts": [
      {
        "term": "Cent",
        "definition": "1/1200 of an octave; logarithmic unit for measuring intervals",
        "value": "2^(1/1200) ≈ 1.0005777895"
      },
      {
        "term": "Just Intonation (JI)",
        "definition": "Tuning based on pure frequency ratios using small whole numbers"
      },
      {
        "term": "Equal Division of the Octave (EDO)",
        "definition": "Dividing the octave into n equal logarithmic steps"
      },
      {
        "term": "Temperament",
        "definition": "A tuning that tempers (adjusts) pure intervals for practical purposes"
      },
      {
        "term": "Comma",
        "definition": "Small interval representing the difference between two ways of reaching the same note"
      },
      {
        "term": "Syntonic Comma",
        "value": "81/80 ≈ 21.5 cents",
        "definition": "Difference between Pythagorean and just major thirds"
      },
      {
        "term": "Limit",
        "definition": "Highest prime number in the ratios of a JI scale (e.g., 5-limit, 7-limit)"
      }
    ]
  },
